.white-box-top
.white-box-container
  .content
    %h1= t('contact.list')
    .actions 
      = link_to t('contact.new'), new_contact_path
    %table{:class => 'list'}
      %thead
        %tr
          %th= t('contact.name')
          %th= t('contact.institution')
          %th= 'E-mail'
          %th{:style => 'width: 60px;'}
          %th{:style => 'width: 50px;'}
          %th{:style => 'width: 50px;'}
      %tbody
        - @contacts.each do |contact|
          %tr
            %td= contact.name
            %td= contact.institution.name if !contact.institution.nil?
            %td= contact.emails_as_html.html_safe
            %td= link_to t('show'), contact
            %td= link_to t('edit'), edit_contact_path(contact)
            %td= link_to t('destroy'), contact, :confirm => t('are_you_sure'), :method => :delete
    
  .clearfix

